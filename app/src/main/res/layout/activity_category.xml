<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Admin.CategoryActivity">

    <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="240dp">

        <TextView
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:textSize="30sp"
                android:id="@+id/category_text"
                android:layout_alignParentTop="true"
                android:text="Yeni Kateqoriya"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <EditText
                android:layout_below="@id/category_text"
                android:id="@+id/category_name"
                android:layout_marginBottom="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:hint="Sifarişi alan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <Button
                android:layout_marginLeft="30dp"
                android:layout_below="@id/category_name"
                android:layout_marginRight="30dp"
                android:id="@+id/savecategory"
                android:background="@drawable/btnorder_accept"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:text="Təsdiqlə"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>


    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/relativelayout2"
            android:layout_marginTop="100dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="240dp">

        <RelativeLayout
                android:paddingTop="10dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="250dp">

            <TextView
                    android:textColor="@android:color/white"
                    android:background="@color/colorPrimary"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:id="@+id/slider_text_second"
                    android:layout_alignParentTop="true"
                    android:text="Kateqoriya Sil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            <Spinner
                    android:layout_marginBottom="20dp"
                    android:layout_below="@id/slider_text_second"
                    android:id="@+id/category_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <Button
                    android:layout_marginLeft="30dp"
                    android:layout_below="@id/category_spinner"
                    android:layout_marginRight="30dp"
                    android:id="@+id/deletecategory"
                    android:background="@drawable/btnorder_deny"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:text="Sil"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"/>


        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>