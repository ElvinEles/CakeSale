<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:layout_height="50dp">

    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="15"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:paddingTop="3dp"
                android:orientation="vertical"
                android:layout_weight="12"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                    <TextView
                            android:background="@color/textviewbackcolor"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/textviewcolor"
                            android:padding="2dp"
                            android:text="Təslim tarixi:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    <TextView
                            android:layout_marginTop="4dp"
                            android:background="@color/textviewbackcolor"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/textviewcolor"
                            android:padding="2dp"
                            android:text="Müştəri Adı:"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="117dp"
                        android:layout_height="match_parent">

                    <TextView
                            android:id="@+id/product_deliver_time"
                            android:paddingLeft="1dp"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:padding="2dp"
                            android:text="05.04.2019 16:00"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>


                    <TextView
                            android:id="@+id/product_custom_name_list"
                            android:layout_marginTop="4dp"
                            android:paddingLeft="1dp"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:padding="2dp"
                            android:text="Terlan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                </LinearLayout>


                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <TextView
                            android:background="@color/textviewbackcolor"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/textviewcolor"
                            android:padding="2dp"
                            android:text="Tərkibi:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>


                    <TextView

                            android:layout_marginTop="4dp"
                            android:background="@color/textviewbackcolor"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="@color/textviewcolor"
                            android:padding="2dp"
                            android:text="Miqdar:"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="87dp"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/product_kind_list"
                            android:paddingLeft="1dp"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:padding="2dp"
                            android:text="Şokoladlı"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>


                    <TextView
                            android:id="@+id/product_amount_list"
                            android:layout_marginTop="4dp"
                            android:paddingLeft="1dp"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"
                            android:padding="2dp"
                            android:text="1 ƏDƏD"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                </LinearLayout>
            </LinearLayout>




        </LinearLayout>

        <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            <ImageView
                    app:srcCompat="@drawable/ic_product_photo"
                    android:scaleType="fitCenter"
                    android:id="@+id/product_image_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


        </LinearLayout>

        <LinearLayout
              android:layout_gravity="center"
                android:clickable="false"
                android:padding="1dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">



            <ImageView
                    android:clickable="true"
                    android:id="@+id/showproduct"
                    app:srcCompat="@drawable/ic_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>





        </LinearLayout>



    </LinearLayout>


</android.support.v7.widget.CardView>