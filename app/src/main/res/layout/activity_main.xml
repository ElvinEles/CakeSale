<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/logo"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_cake"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

    <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/user_name"
                android:layout_marginBottom="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:hint="User adÄ±"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <EditText
                android:id="@+id/user_password"
                android:layout_marginBottom="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"
                android:inputType="textPassword"
                android:hint="User parol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <CheckBox
                android:id="@+id/remmember_me"
                android:text="Yadda saxla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:layout_marginRight="10dp"
                    android:id="@+id/checkUser"
                    android:background="@drawable/btnorder_accept"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:text="Daxil ol"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            <Button
                    android:layout_marginLeft="10dp"
                    android:id="@+id/exitprogram"
                    android:background="@drawable/btnorder_deny"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:text="Geri"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


        </LinearLayout>



    </LinearLayout>





</RelativeLayout>